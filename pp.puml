OpenGyro -up-|> action
AMoveType -up-|> action

LinearAMoveType -up-|> AMoveType
FollowWallAMoveType -up-|> AMoveType

MovementForward -up-> FollowWallAMoveType
MovementTurn -up-> FollowWallAMoveType
