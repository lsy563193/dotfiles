Interface action{
  +virtual bool isFinish()=0;
  +virtual void run()=0;
  +bool isTimeUp();

 #double start_timer_{};
 #double interval_{};
}

class Mode{
	+void run();
	+virtual bool isFinish();
	+virtual bool isExit();
}

abstract ACleanMode{
 +bool isFinish();
 -bool setNextAction();
 -bool setNextState();
	#int state;
}

abstract AMoveType
class NavigationCleanMode {
 +bool isFinish()
}
note left of Mode : core func **run()**
